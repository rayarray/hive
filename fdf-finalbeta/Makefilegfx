NAME	=	fdftest

INC		=	
HDR		=	

CFLAGS	=	-Wall -Wextra -Werror

SRC		=	$(addsuffix .c, $(NAME))

OBJ		=	$(SRC:.c=.o)

CC		=	cc

all: $(NAME)

$(NAME): %: %.c
	$(CC) $(CFLAGS) -Imlx -lmlx -framework OpenGL -framework AppKit -o $@ $<
#	$(CC) $(CFLAGS) -I $(HDR) $(INC) -o $@ $<

clean:
	/bin/rm -f $(OBJ)

fclean: clean
	/bin/rm -f $(NAME)

re: fclean all